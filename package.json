{
  "name": "@isimmons/tt-package-demo",
  "version": "1.0.2",
  "description": "A demo package for Total TypeScript 'How to create an npm package'",
  "keywords": [
    "demo",
    "typescript"
  ],
  "homepage": "https://github.com/isimmons/tt-package-demo",
  "bugs": {
    "url": "https://github.com/isimmons/tt-package-demo/issues"
  },
  "author": "Ian Simmons",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isimmons/tt-package-demo.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vitest",
    "build": "tsc",
    "format": "prettier --write .",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "test": "vitest run",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "gha-release": "npm run build && changeset publish",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
